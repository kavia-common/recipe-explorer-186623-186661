---
const { open = false, title = '' } = Astro.props as { open?: boolean; title?: string };
---

<div class="modal-backdrop" data-open={open} hidden={!open} aria-hidden={!open} aria-modal="true" role="dialog">
  <div class="modal card" role="document">
    <div class="modal-header">
      <h3 class="modal-title">{title}</h3>
      <button class="icon-btn" aria-label="Close" id="modal-close">âœ•</button>
    </div>
    <div class="modal-body">
      <slot />
    </div>
  </div>
</div>

<style>
  .modal-backdrop[hidden] { display: none !important; }
  .modal-backdrop {
    position: fixed; inset: 0; background: rgba(17,24,39,0.45);
    display: grid; place-items: center; padding: 1rem;
    z-index: 50;
  }
  .modal {
    width: min(720px, 100%);
    max-height: 85dvh;
    overflow: auto;
    border-radius: var(--radius-lg);
  }
  .modal-header {
    display: flex; align-items: center; justify-content: space-between;
    padding: 1rem 1rem .5rem 1rem;
    border-bottom: 1px solid rgba(0,0,0,0.06);
  }
  .modal-title { margin: 0; }
  .modal-body { padding: 1rem; }
  .icon-btn {
    background: transparent; border: 0; font-size: 1.1rem; cursor: pointer;
  }
  .icon-btn:focus-visible { box-shadow: var(--focus-ring); border-radius: var(--radius-sm); }
</style>

<script>
  const root = document.currentScript?.closest('.modal-backdrop');
  const closeBtn = root?.querySelector('#modal-close') as HTMLButtonElement | null;
  function close() {
    if (!root) return;
    root.hidden = true;
    root.setAttribute('data-open', 'false');
  }
  closeBtn?.addEventListener('click', close);
  root?.addEventListener('click', (e) => {
    if (e.target === root) close();
  });
  window.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') close();
  });
</script>
